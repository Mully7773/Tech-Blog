<div>
{{#if posts}}
    <h2>Your Posts</h2>
    {{#each posts as |post|}}
    <div class="card justify-space-between mt-5">
        <div class="card-header">
        <h1>
            <a href="/post/{{post.id}}">{{post.title}}</a>
        </h1>
        </div>
        <p id="postTime">{{post.createdAt}}</p>
        <p id="postAuthor">Posted By: {{post.user.username}}</p>
         <div class="card-body">
            <p>{{post.body}}</p>
        </div>
    </div>
    
   
    {{/each}}
{{/if}}
</div>

